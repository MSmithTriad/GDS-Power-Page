{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017", "DOM"],
    "outDir": "./",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["web-pages/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "web-pages/**/*.js"]
}
